doctype html
html
    head
        meta(charset="UTF-8")
        title #{status} - #{message}
        style.
            h1 {
                font-size: 100px;
                margin: 10px;
                font-family: Arial, "Helvetica Neue", Helvetica, sans-serif;
                font-weight: normal;
            }

            body {
                text-align: center;
            }

            div {
                position: absolute;
                top: 30%;
                left: 35%;
                width: 30%;
                height: 80%;
            }
    body
        div
            h1 #{status}
            if status == 404
                p #{lang('error_server_404')}
            else
                p #{lang('error_server_generic', status, message)}
            a(href="/dashboard") #{lang('error_todashboard')}
