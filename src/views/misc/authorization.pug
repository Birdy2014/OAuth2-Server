extends ../layout.pug
block head
    link(href="../css/authorization.css" rel="stylesheet")
    title= lang("login")
    script(src="../js/authorization.js")
block body
    #outer-container
        form#inner-container
            h1#title= lang("login")
            #input-container
                input#usernameInput(type="text" name="login" placeholder="Nutzername, ID oder E-Mail" required)
                input#passwordInput(type="password" name="password" placeholder=lang("password") required)
                if email
                    a#recoverLink(href="javascript:void(0)" onclick="submitPasswordReset()")= lang("forgotPassword")
            #button-container
                input#nextButton(type="submit" value=lang("continue"))
                if enableRegistration
                    a#registerButton(href="javascript:void(0)" onclick="redirect('../register')")= lang("register")
block footer
    #cookie-banner
        p #{lang('cookie_banner')}

    script document.querySelector("form").addEventListener("submit", submitAuthorization)
